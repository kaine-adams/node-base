mixin formCsrf(_csrf)
    input(type='hidden' name='_csrf' value=_csrf)

mixin formInput(_label, _name, _type, _placeholder)
    div(class='form-group row')
        label(for=_name class='col-sm-2 col-form-label') #{_label}
        div(class='col-sm-10')
            input(type=_type class='form-control' name=_name placeholder=_placeholder)

mixin formCheckbox(_label, _name)
    div(class='form-group row align-items-center justify-content-center')
        .form-check
            input(type='checkbox' class='form-check-input' name=_name value=true)
            label(for=_name class='form-check-label') #{_label}

mixin formSubmit(_label, _cancel)
    div(class='form-group row align-items-center justify-content-center')
        if _cancel != nil
            a(href=_cancel class='col-sm-2 btn btn-danger' ) Cancel
            input(type='submit' class='col-sm-2 offset-1 btn btn-success' value=_label)
        else
            input(type='submit' class='col-sm-2 btn btn-primary' value=_label)
